def sum(n,i=0):
    if i==len(n)-1:
        return n[i]
    return min(n[i],sum(n,i+1))    
l=[2,3,6,1,5]
print(sum(l))
#method-2                                                                                      
def sum(n,i=0):
    if i==len(n)-1:
        return n[i]
    min=sum(n,i+1)
    return n[i] if n[i]<min else min  
l=[2,3,6,5]
print(sum(l))
#OOPS
